<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= title %></h2>
  </div>
  <div class="card-section">
    <%= render partial: "decidim_hospitalet/surveys/survey_results/form", locals: { form: form } %>

    <div class="row column">
      <%= form.text_field :name, label: t("questions.name", scope: "decidim_hospitalet.surveys") %>
    </div>

    <div class="row column">
      <%= form.text_field :phone, label: t("questions.phone", scope: "decidim_hospitalet.surveys") %>
    </div>

    <%= captured if defined? captured %>
  </div>
</div>
